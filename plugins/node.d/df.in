#!@@GOODSH@@
# -*- sh -*-

: << =cut

=head1 NAME

df - Script to monitor disk usage

=head1 CONFIGURATION

The following environment variables are used by this plugin:

 warning  - Warning percentage (Default: 92)
 critical - Critical percentage (Default: 98)

=head1 MAGIC MARKERS

 #%# family=auto
 #%# capabilities=autoconf

=cut

# shellcheck disable=SC1090
. "$MUNIN_LIBDIR/plugins/plugin.sh"


df_entries=$(df -P -l 2>/dev/null | sed -e 1d -e '/\/\//d' -e 's/%//' | sort)


if [ "$1" = "autoconf" ]; then
    if [ -z "$(get_df_entries)" ] ; then
        echo "no (no mounted filesystems found)"
    else
        echo yes
    fi
    exit 0
fi

if [ "$1" = "config" ]; then
    echo 'graph_title Disk usage in percent'
    echo 'graph_args --upper-limit 100 -l 0'
    echo 'graph_vlabel %'
    echo 'graph_category disk'
    echo 'graph_scale no'
    echo "$df_entries" | while read -r dev size used free pct fs; do
        name=$(clean_fieldname "$dev")
        echo "$name.label $fs"
        print_warning "$name"
        print_critical "$name"
    done
    exit 0
fi

# output current values
# shellcheck disable=SC2034
echo "$df_entries" | while read -r dev size used free pct fs; do
     echo "$(clean_fieldname "$dev").value $pct"
done
